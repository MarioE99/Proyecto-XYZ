@model IEnumerable<Proyecto_Empleados_MarioE.Models.Departamento>

@{
    ViewData["Title"] = "Registro de departamento";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdDepartamento">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdDepartamento">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdDepartamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
